<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	  xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean name="{{txtIdServiceName}}" class="org.egovframe.rte.fdl.idgnr.impl.EgovTableIdGnrServiceImpl" destroy-method="destroy">
        <property name="dataSource" ref="{{txtDatasourceName}}"/>
        <property name="table"	  value="{{txtTable}}"/>
        <property name="tableName"  value="{{txtTableNameFieldValue}}"/>	
        <property name="blockSize" value="{{txtBlockSize}}"/>
        {{#if chkStrategy}} 
        <property name="strategy" ref="{{txtStrategyName}}"/>
        {{/if}}
    </bean>	

    {{#if chkStrategy}}
    <bean name="{{txtStrategyName}}" class="org.egovframe.rte.fdl.idgnr.impl.strategy.EgovIdGnrStrategyImpl">
        <property name="prefix" value="{{txtPrefix}}"/>
        <property name="cipers" value="{{txtCipers}}"/>
        <property name="fillChar" value="{{txtFillChar}}"/>
    </bean>
    {{/if}}
</beans>
