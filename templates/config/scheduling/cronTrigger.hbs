<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- Cron Trigger Configuration (Spring Framework 6.x compatible) -->
	<bean id="{{txtTriggerName}}" class="org.springframework.scheduling.quartz.CronTriggerFactoryBean">
		<property name="jobDetail" ref="{{txtJobName}}" />
		<property name="cronExpression" value="{{txtCronExpression}}" />
	</bean>

</beans>
