package {{txtConfigPackage}};

import java.util.HashMap;
import java.util.Map;

import org.springframework.context.annotation.Bean;
import org.springframework.context.annotation.Configuration;
import org.springframework.scheduling.quartz.JobDetailFactoryBean;

/**
 * Job Detail Bean Configuration for Quartz Scheduler
 * Spring Framework 6.x compatible
 * 
 * Requirements:
 * - Spring Framework 6.x
 * - Quartz Scheduler 2.3.2+
 * - JDK 17+
 */
@Configuration
public class {{txtFileName}} {

    /**
     * Job Detail Bean 설정
     * org.springframework.scheduling.quartz.QuartzJobBean을 구현한 클래스 필요
     */
    @Bean(name = "{{txtJobName}}")
    public JobDetailFactoryBean {{txtJobName}}() {
        JobDetailFactoryBean jobDetailFactory = new JobDetailFactoryBean();
        jobDetailFactory.setJobClass({{txtServiceClass}}.class); // org.springframework.scheduling.quartz.QuartzJobBean 구현 클래스
        {{#if chkProperty}}
        Map<String, Object> jobDataMap = new HashMap<>();
        jobDataMap.put("{{txtPropertyName}}", "{{txtPropertyValue}}");
        jobDetailFactory.setJobDataAsMap(jobDataMap);
        {{/if}}
        return jobDetailFactory;
    }
}
